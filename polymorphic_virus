import os
import sys
from threading import Thread
from pathlib import Path
from base64 import b64encode
import random
import string

print(Path.cwd())

print(os.path.basename(__file__))

filename = "newpython{randomness}.py".format(randomness="".join(random.choices(string.ascii_lowercase + string.digits, k=100)))

f = open(filename, "w")
f.write(

    '''
    
import os
import sys
from threading import Thread
from pathlib import Path
from base64 import b64encode
import random
import string

print(Path.cwd())

print(os.path.basename(__file__))

filename = "newpython{randomness}.py".format(randomness="".join(random.choices(string.ascii_lowercase + string.digits, k=100)))

f = open(filename, "w")
f.write(

    '''

'{randomness}'
'''.format(randomness="".join(random.choices(string.ascii_lowercase + string.digits, k=100)))
        )


f.close()


def runFunc():
    os.system('python3 ' + filename)

thread = Thread(target=runFunc)
thread.start()
print("yep I am here" + filename)
sys.exit()

'{randomness}'
'''.format(randomness="".join(random.choices(string.ascii_lowercase + string.digits, k=100)))
        )


f.close()


